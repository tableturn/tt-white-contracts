{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 125,
        "useTabs": false,
        "tabWidth": 2,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.js", "*.md"],
      "options": {
        "printWidth": 125,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": ["*.json"],
      "options": {
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": "*.md",
      "options": {
        "useTabs": false
      }
    }
  ]
}
